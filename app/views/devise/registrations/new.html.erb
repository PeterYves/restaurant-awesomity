<div class="card" style="width:30%;margin:auto;margin-top:60px;margin-bottom:60px">

  <h5 class="card-header info-color white-text text-center py-4">
    <strong>Sign Up</strong>
  </h5>

  <!--Card content-->
  <div class="card-body px-lg-5 pt-0">

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),style:'#757575') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <!-- Email -->
      <div class="md-form">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",id:"materialLoginFormEmail",placeholder:'E-Mail',class:"form-control" %>
      </div>

      <!-- Password -->
      <div class="md-form">
        <%= f.password_field :password, autocomplete: "current-password",id:"materialLoginFormPassword",placeholder:'Password', class:"form-control" %>
        
      </div>

      <div class="md-form">
        <%= f.password_field :password_confirmation, autocomplete: "current-password",id:"materialLoginFormPassword",placeholder:'Confirm Password', class:"form-control" %>
        
      </div>

      <!-- Sign in button -->
      <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign UP</button>

    <% end %>
    <!-- Form -->

  </div>

</div>
