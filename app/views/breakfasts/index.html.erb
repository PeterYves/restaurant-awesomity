<div class="tasks">

<h1>zes</h1>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3">More Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @breakfasts.each do |breakfast| %>
    <% if current_user.id == breakfast.user_id %>
      <tr>
        <td><%= breakfast.name %></td>
        <td><%= breakfast.price %></td>
        
        <td><%= link_to 'Show', breakfast,class:'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_breakfast_path(breakfast),class:'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', breakfast, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-secondary btn-sm' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New breakfast', new_breakfast_path, class: 'new' %>&nbsp;&nbsp;&nbsp;&nbsp;
